<div class="large-6 large-centered columns panel">
<%= form_for @recommendation do |f| %>
    <div class="row">
      <div class="large-12 columns">
        <%= f.label :query %>
        <%= f.text_field :query, placeholder: 'What did you search?' %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.label :trend_or_location %>
        <%= f.select :trend_or_location, ['Trend', 'Location'] %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.label :category %>
        <%= f.select :category, ['General', 'Politics and Religion', 'Business and Economics', 'Science and Technology', 'Sports and Entertainment'] %>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns">
        <%= f.label :description %>
        <%= f.text_area :description, placeholder: 'Why did you find this interesting?' %>
      </div>
    </div>
</div>
<div class="large-2 large-centered columns">
  <%= f.submit "Submit", class: "button expand" %>
</div>

<% end %>
