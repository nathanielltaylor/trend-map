<% if params[:search] %>
  <%= "Most recent tweets concerning #{params[:search]} (Trend)" %>
  <%= image_tag "trend.png" %>
<% elsif params[:location] %>
  <%= "Most recent tweets near #{params[:location].titleize} (Location)" %>
  <%= image_tag "location.png" %>
<% elsif params[:local] %>
  <%= "Local Tweets" %>
  <%= image_tag "local_target.png" %>
<% end %>
<table>
<tr>
  <th>User</th>
  <th>Content</th>
  <th>Location</th>
</tr>
<tr>
  <% @tweets.each do |t| %>
    <td><%= t.user.screen_name %></td>
    <td><%= t.text %></td>
    <td>
    <% if t.place.class != Twitter::NullObject %>
      <%= "#{t.place.name}, #{t.place.country}" %>
    <% end %>
    </td>
</tr>
  <% end %>
</table>
<%= link_to "Recommend this Search", new_recommendation_path, class: "button" %>
